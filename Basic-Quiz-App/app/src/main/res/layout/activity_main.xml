<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/sandulescu_razvan_alexandru_ivQA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/qa_main" />

    <TextView
        android:id="@+id/sandulescu_razvan_alexandru_tvQA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_computer_science_quiz"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/mustar"
        app:layout_constraintTop_toBottomOf="@id/sandulescu_razvan_alexandru_ivQA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp" />

    <Button
        android:id="@+id/sandulescu_razvan_alexandru_btnSQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_start_quiz"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@drawable/round_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>